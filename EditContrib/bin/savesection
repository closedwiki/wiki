BEGIN {
    # See the 'view' script for a description of what this does
    if( $ENV{"SCRIPT_FILENAME"} &&
        $ENV{"SCRIPT_FILENAME"} =~ /^(.+)\/[^\/]+$/ ) {
        chdir $1;
    }
    unshift @INC, '.';
    require 'setlib.cfg';
}

use strict;
use TWiki::Func;
use TWiki::UI;
use TWiki::UI::Save;
use TWiki::Contrib::EditContrib;

TWiki::UI::run ( \&save );

sub save {

  my $session = shift;
  $TWiki::Plugins::SESSION = $session;
  my $query = TWiki::Func::getCgiQuery();

  ## Not used?
  my $nl = ( $query->param( 'newline' ) )?"\n":"";

  # Update url parameters
  my $text =
    TWiki::Contrib::EditContrib::unprotect($query->param( 'pretxt' )) .
	$query->param( 'text' ) .
	  TWiki::Contrib::EditContrib::unprotect($query->param( 'postxt' ));

  $session->{cgiQuery}->param( -name=>"text", -value=>$text);

  TWiki::UI::Save::save( $session );

}

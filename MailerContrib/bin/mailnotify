# Mail notification script. Must -I the TWiki bin dir for this
# script, so it can find the rets of TWiki.

BEGIN {
    require 'setlib.cfg';
}

my $verbose = 1;

my @webs = ();

# Called from the command line
foreach $arg ( @ARGV ) {
    if ( $arg eq "-q" ) {
        $verbose = 0;
    } else {
        push( @webs, $arg );
    }
}

use TWiki::Contrib::Mailer;

my $report = TWiki::Contrib::Mailer::mailNotify( \@webs, undef, $verbose );
print $report."\n" if $verbose;

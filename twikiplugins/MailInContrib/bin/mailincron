use strict;

BEGIN {
    # Set default current working directory (needed for mod_perl)
    if( $ENV{"SCRIPT_FILENAME"} &&
		$ENV{"SCRIPT_FILENAME"} =~ /^(.+)\/[^\/]+$/ ) {
        chdir $1;
	} elsif ( $0 =~ /^(.*)\/.*?$/ ) {
        chdir $1;
	}
    # Set library paths in @INC, at compile time
    unshift @INC, '.';
    require 'setlib.cfg';
}

use TWiki::Attrs;
use TWiki::Contrib::MailInContrib;

my $debug;
if( $ENV{'DOCUMENT_ROOT'} ) {
    # Called from browser.
    # CODE_SMELL: Is this really a reliable way of detecting
    # a browser environment?
    print "Content-type: text/plain\n\n";
    use CGI;
    my $query = new CGI;
    $debug = $query->param( 'debug' ) || 0;
} else {
    # Called from the command line
    my $args = new TWiki::Attrs( join(" ", @ARGV ), 1);
    $debug = $args->{debug};
}

my $twiki;
my $folders;
if( defined $TWiki::wikiversion ) {
    TWiki::initialize();
    $twiki = undef;
    $folders = ....;
} else {
    $twiki = new TWiki();
    $folders = $TWiki::cfg{MailIn};
}
my $processor = new TWiki::Contrib::MailInContrib($twiki, $debug);
foreach my $folder ( @$folders ) {
    $processor->processInbox( $folder );
}
}
$processor->wrapUp();

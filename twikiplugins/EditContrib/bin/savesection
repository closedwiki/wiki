BEGIN {
    # See the 'view' script for a description of what this does
    if( $ENV{"SCRIPT_FILENAME"} &&
        $ENV{"SCRIPT_FILENAME"} =~ /^(.+)\/[^\/]+$/ ) {
        chdir $1;
    }
    unshift @INC, '.';
    require 'setlib.cfg';
}

use strict;
use Assert;
use CGI::Carp qw( fatalsToBrowser );
use CGI qw( :cgi -any );
use TWiki;
use TWiki::UI;
use TWiki::UI::Save;

my $query = new CGI;
my $thePathInfo = $query->path_info(); 
my $theRemoteUser = $query->remote_user();
my $theUrl = $query->url;
my $theTopic = $query->param( 'topic' );
my $nl = ( $query->param( 'newline' ) )?"\n":"";

#### Deprecated function, could emulate TWiki::UI::run
my ( $topic, $web, $dummy, $userName ) = 
  TWiki::initialize( $thePathInfo, $theRemoteUser,
                     $theTopic, $theUrl, $query );

# Update url parameters
my $text = $query->param( 'pretxt' ) . 
             $query->param( 'text' ) . $nl . 
                $query->param( 'postxt' );
my $editaction = $query->param ( 'editaction' );
$editaction .= $query->param ( 'editparams' );
#### Apparently not necessary in twiki4
#### $text = TWiki::Render::decodeSpecialChars( $text );

my $session = $TWiki::Plugins::SESSION;
$session->{cgiQuery}->param( -name=>"text", -value=>$text);
$session->{cgiQuery}->param( -name=>"editaction", -value=>$editaction);

TWiki::UI::Save::save( $session );



%TMPL:DEF{"message"}% <table border="0">
---++ %MAKETEXT{"Set Parent Topic"}%</td> </tr>
<form name="main" action="%NATSCRIPTURLPATH{"edit"}%/%WEB%/%TOPIC%">
<tr>
  <td style="padding-left:20px"> <select name="topicparent"><option value="">%MAKETEXT{"Select..."}%</option>
     %TOPICLIST{"<option value='$name'>$name</option>" separator=" "}%
     </select>&nbsp;
  <td><input type="submit" class="natOkButton" style="width:5em" value='%MAKETEXT{"OK"}%'/><br/>
  </td>
</tr><tr>
  <td>
    <ul style="margin:0px"><li>%MAKETEXT{"Note: Edit and save the topic to activate the new parent. [_1]" args="%I%"}%</li></ul>
  </td>
  <td>
    <input type="button" class="natCancelButton" style="width:5em" value='%MAKETEXT{"Cancel"}%' onclick="self.location.href = '%NATSCRIPTURLPATH{"view"}%/%WEB%/%TOPIC%';">
  </td>
</tr>
</form>
<tr><td colspan="2">
---++ %MAKETEXT{"Backlinks"}%</td></tr>
<form name="main" action="%NATSCRIPTURLPATH{"search"}%/%WEB%/SearchResult">
<tr>
  <td>
    <input type="hidden" name="scope" value="text">
    <input type="hidden" name="regex" value="on">
    <input type="hidden" name="search" value="%TOPIC%[^A-Za-z]">
    <ul style="margin:0px"><li>%MAKETEXT{"Find topics that link to [_1] ..." args="[[%WEB%.%TOPIC%]]"}%</li></ul>
  </td>
  <td>
    <input type="submit" class="natAltButton" style="width:5em" value='%MAKETEXT{"Find"}%'>
  </td>
</tr>
<tr>
  <td>
    <ul style="margin:0px"><li>%MAKETEXT{"Search in all public webs"}%</li></ul>
  </td>
  <td>
    <input type="checkbox" name="web">
  </td>
</tr>     
</form>
%IFSKINSTATETHEN{release="dakar"}%
<tr>
<td colspan="2">
---++ %MAKETEXT{"Topic preferences"}%</td></tr>
<form name="main" action="%NATSCRIPTURLPATH{"manage"}%/%WEB%/%TOPIC%" method="post">
  <input type="hidden" name="action" value='%MAKETEXT{"editSettings"}%' />
<tr>
  <td>
    <ul style="margin:0px"><li>%MAKETEXT{"Edit preference settings for [[[_1]]]" args="%WEB%.%TOPIC%"}%</li></ul>
  </td>
  <td><input type="submit" class="natAltButton" style="width:5em" value='%MAKETEXT{"Edit"}%'>
</tr>
</form>

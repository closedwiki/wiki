use CGI::Carp qw(fatalsToBrowser);
use CGI;
use lib ( '.' );
use lib ( '../lib' );
use TWiki;


$query= new CGI;

&main();

sub main
{
    my $thePathInfo = $query->path_info(); 
    my $theRemoteUser = $query->remote_user();
    my $theTopic = $query->param( 'topic' );
    my $theUrl = $query->url;

    ( $topic, $webName) = 
	&TWiki::initialize( $thePathInfo, $theRemoteUser, $theTopic, $theUrl );

    my $tmpl= "";

    if( ! &TWiki::Store::webExists( $webName ) ) {
	$tmpl= &TWiki::Store::readTemplate( "noweb" );
	$tmpl = &TWiki::handleCommonTags( $tmpl, $topic );
        print "Content-type: text/html\n\n";  # Fixed n.lee 20000922
	print $tmpl;
	return;
    }

    my $fileName = $query->param( 'filename' );

    my $rev = $query->param( 'rev' );

    if ( $rev ) {
        # FIXME doesn't deal with extension correctly yet.
        my $fileContent = TWiki::Store::readAttachmentVersion( $webName, $topic, $fileName, $rev ); 
        #TWiki::writeDebug( "$fileContent" );
        if ( $fileName =~ /\.txt$/ ) {
           print "Content-type: text/plain\n\n";
        } else {
           print "Content-type: application\n\n";
        }
        print "$fileContent";
        return;
    }

    # this should actually kick off a document conversion 
    # (.doc, .xls... to .html) and show the html file.
    # Convert only if html file does not yet exist
    # for now, show the original document:

    # PTh 20 Jun 2000: Added host
    my $pubUrlPath = &TWiki::getPubUrlPath();
    my $host = $TWiki::urlHost;
    print $query->redirect( "$host$pubUrlPath/$webName/$topic/$fileName" );
}

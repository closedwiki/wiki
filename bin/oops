use CGI::Carp qw(fatalsToBrowser);
use CGI;
use lib ( '.' );
use lib ( '../lib' );
use TWiki;

$query= new CGI;

&main();

sub main
{
    my $thePathInfo = $query->path_info(); 
    my $theRemoteUser = $query->remote_user();
    my $theTopic = $query->param( 'topic' );
    my $theUrl = $query->url;

    ( $topic ) = 
	&TWiki::initialize( $thePathInfo, $theRemoteUser, $theTopic, $theUrl );

    my $tmplName = $query->param( 'template' );
    if( ! $tmplName ) {
        $tmplName = "oops";
    }
    my $tmplData = &TWiki::readTemplate( $tmplName );
    if( ! $tmplData ) {
        print "Content-type: text/html\n\n";
        print "<html><body>";
        print "<h1>TWiki Installation Error</h1>";
        print "Template directory $TWiki::templateDir not found.<p>";
        print "Check the \$templateDir variable in TWiki.cfg.";
        print "</body></html>";
        return;
    }

    my $param = $query->param( 'param1' ) || "";
    $tmplData =~ s/%PARAM1%/$param/go;
    $param = $query->param( 'param2' ) || "";
    $tmplData =~ s/%PARAM2%/$param/go;
    $param = $query->param( 'param3' ) || "";
    $tmplData =~ s/%PARAM3%/$param/go;
    $param = $query->param( 'param4' ) || "";
    $tmplData =~ s/%PARAM4%/$param/go;

    $tmplData = &TWiki::handleCommonTags( $tmplData, $topic );
    my( $head, $body ) = split( /<\/head>/i, $tmplData );
    $body = &TWiki::getRenderedVersion( "</head>$body" );
    $body =~ s|</*nop/*>||goi;   # remove <nop> tags (PTh 06 Nov 2000)

    print "Content-type: text/html\n\n";
    print "$head$body";
}

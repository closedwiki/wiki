Redirect /home/httpd/twiki/index.html http://your.domain.com/twiki/bin/view

AuthUserFile /home/httpd/twiki/bin/.htpasswd
AuthGroupFile /home/httpd/twiki/bin/.htgroup
AuthName ByPassword
AuthType Basic

SetHandler cgi-script

ErrorDocument 401 /home/httpd/twiki/bin/error401.html

<Files ~ "[^/]*\.html$">
       SetHandler blabla
       allow from all
</Files>

<Files "edit.disabled">
       require valid-user
</Files>

<Files "save.disabled">
       require valid-user
</Files>

<Files "attach.disabled">
       require valid-user
</Files>

<Files "upload.disabled">
       require valid-user
</Files>

<Files "*">
       allow from all
</Files>

BEGIN {
    # Set default current working directory
    if( $ENV{"SCRIPT_FILENAME"} && $ENV{"SCRIPT_FILENAME"} =~ /^(.+)\/[^\/]+$/ ) {
        chdir $1;
    }
    # Set library paths in @INC at compile time
    unshift @INC, '.';
    require 'setlib.cfg';
}

# I18N: No locale settings necessary yet - only 7-bit ASCII due
# to Apache limitations on userids.

use strict;
use CGI::Carp qw(fatalsToBrowser);
use CGI;
use TWiki;
use TWiki::UI::Register;
use Data::Dumper;

my $query = new CGI;

#die Dumper(\$query);

my $action = $query->param('action');

if ($action eq 'resetPassword') { # better in passwd, but not authenticated so I can't.
  TWiki::UI::Register::resetPassword(
				     query => $query
				    );
    } else {
      die "invalid action ($action) in register";
    }

1;

use CGI;
use wiki;


print "Content-type: text/html\n\n";

$query= new CGI;

&main();

sub main
{
    my $thePathInfo = $query->path_info(); 
    my $theRemoteUser = $query->remote_user();
    my $theTopic = $query->param('topic');
    my $theUrl = $query->url;

    ( $topic, $webName, $scriptUrl, $userName, $dataDir) = 
	&wiki::initialize( $thePathInfo, $theRemoteUser, $theTopic, $theUrl );

    if( ! &wiki::webExists($webName))
    {
	$tmpl= &wiki::readTemplate( "noweb" );
	$tmpl = &wiki::handleCommonTags( $tmpl, $topic );
	print $tmpl;
	return;
    }

    $emailbody = "";

    $text = &wiki::readTemplate("changes");
    $changes= &wiki::readFile("$dataDir/$webName/.changes");
   
    my %exclude;
    my $head;

    $text = &wiki::handleCommonTags($text, $topic);

    ( $before, $text, $after) = split( /%REPEAT%/, $text);
    print $before;

    foreach( reverse split( /\n/, $changes))
    {
	@bar = split( /\t/);
	$foo = $text;
	if( !defined( %exclude) ||
	    $exclude{$bar[0]} ne "1")
	{
	    $foo = $text;
	    $foo =~ s/%TOPICNAME%/$bar[0]/go;
	    $wikiuser = &wiki::userToWikiName( $bar[1]);
	    $foo =~ s/%AUTHOR%/$wikiuser/go;
	    $time = &wiki::formatGmTime($bar[2]);
	    $foo =~ s/%TIME%/$time/go;
	    $foo = &wiki::getRenderedVersion( $foo);

	    $head = &wiki::readFileHead( "$dataDir\/$webName\/$bar[0].txt", 12 );
            $head =~ s/\n/ /go;
            $head =~ s/<[^>]*>//go;
            $head =~ s/[\*\|=_]/ /go;
            $head =~ s/%INCLUDE[^%]*%/ /go;
            $head = &wiki::handleCommonTags( $head, $bar[0] );
            $head =~ s/(.{162})([a-zA-Z0-9]*)(.*?)$/$1$2 \.\.\./go;
            $foo =~ s/%TEXTHEAD%/$head/go;

	    print $foo;
	    $exclude{$bar[0]}="1";
	}
    }

    if( $wiki::doLogTopicChanges )
    {
        # write log entry
        my $time = time();
        $time = &wiki::formatGmTime( $time );
        my $wikiUser = &wiki::userToWikiName( $userName );
        &wiki::writeLog( "| $time | $wikiUser | changes | $webName |  |" );
    }

    print $after;
}

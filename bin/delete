use CGI;
use wiki;


$query= new CGI;

&main();

sub main
{
    my $thePathInfo = $query->path_info(); 
    my $theRemoteUser = $query->remote_user();
    my $theTopic = $query->param( 'topic' );
    my $theUrl = $query->url;

    ( $topic, $webName, $scriptUrlPath ) = 
        &wiki::initialize( $thePathInfo, $theRemoteUser, $theTopic, $theUrl );

    if( ! &wiki::webExists( $webName ) ) {
        my $tmpl= &wiki::readTemplate( "noweb" );
        $tmpl = &wiki::handleCommonTags( $tmpl, $topic );
        print $tmpl;
        return;
    }

    my $scriptSuffix = $wiki::scriptSuffix;
    print $query->redirect( "$scriptUrlPath/oops$scriptSuffix/$webName/$topic?template=oopsdel" );
}

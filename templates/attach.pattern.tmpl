%TMPL:DEF{"existingattachments"}%
%META{"attachments" all="on" title="<h2>Existing attachments</h2>"}%
%TMPL:END%



%TMPL:DEF{"content"}%
<form name="main" enctype="multipart/form-data" action="%SCRIPTURLPATH%/upload%SCRIPTSUFFIX%/%INTURLENCODE{"%WEB%/%TOPIC%"}%" method="post">
%TMPL:P{"simpleheader"}%
<div>
%TMPL:P{"previousdetails"}%
<div class="twikiVersatileTable">
<table width="100%">%TMPL:P{"previous"}% 
	<tr>
		<th>
			Local file 
		</th>
		<td class="twikiMainCol">
			<input type="hidden" name="filename" value="%FILENAME%" /><input type="file" name="filepath" value="%FILEPATH%" size="30" /> 
		</td>
		<td class="twikiHelpCol twikiMainCol">
Upload up to %ATTACHFILESIZELIMIT% KB.
		</td>
	</tr>
	<tr>
		<th>
			Comment 
		</th>
		<td>
			<input class="comment" type="text" name="filecomment" value="%FILECOMMENT%" maxlength="256" size="50" /> 
		</td>
		<td class="twikiHelpCol"></td>
	</tr>
	<tr>
		<th>
			Link 
		</th>
		<td>
			<input type="checkbox" class="twikiCheckbox" id="createlink" name="createlink" %ATTACHLINKBOX% /><label for="createlink">Create a link to the attached file</label>
		</td>
		<td class="twikiHelpCol">
Images will be displayed, for other attachments a link will be created.
		</td>
	</tr>
	<tr>
		<th>
			Hide file 
		</th>
		<td>
			<input type="checkbox" class="twikiCheckbox" id="hidefile" name="hidefile" %HIDEFILE% /><label for="hidefile">Do not show attachment in table</label>
		</td>
		<td class="twikiHelpCol">Attachments will not be shown in topic view page.</td>
	</tr>
</table>
</div>
%TMPL:P{"topicaction"}%</form>
<div class="twikiHelp twikiGrayText">
%TMPL:P{"notes"}%
%TMPL:P{"extranotes"}%</div></div>

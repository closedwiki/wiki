%TMPL:DEF{"content"}%
%TMPL:P{"simpleheader"}%
<div class="twikiTopic">
%TMPL:P{"previousdetails"}%
<form name="main" enctype="multipart/form-data" action="%SCRIPTURLPATH%/upload%SCRIPTSUFFIX%/%INTURLENCODE{"%WEB%/%TOPIC%"}%" method="post">
<div class="twikiVersatileTable">
<table width="100%">%TMPL:P{"previous"}% 
	<tr>
		<th>
			Local file 
		</th>
		<td class="twikiMainCol">
			<input type="hidden" name="filename" value="%FILENAME%" /><input type="file" name="filepath" value="%FILEPATH%" size="30" /> 
		</td>
		<td class="twikiHelp twikiMainCol">
Upload up to %ATTACHFILESIZELIMIT% KB.
		</td>
	</tr>
	<tr>
		<th>
			Comment 
		</th>
		<td>
			<input class="comment" type="text" name="filecomment" value="%FILECOMMENT%" maxlength="30" size="50" /> 
		</td>
		<td class="twikiHelp"></td>
	</tr>
	<tr>
		<th>
			Link 
		</th>
		<td>
			<input type="checkbox" name="createlink" %ATTACHLINKBOX% /> Create a link to the attached file
		</td>
		<td class="twikiHelp">
Images will be displayed, for other attachments a link will be created.
		</td>
	</tr>
	<tr>
		<th>
			Hide file 
		</th>
		<td>
			<input type="checkbox" name="hidefile" %HIDEFILE% /> Do not show attachment in table
		</td>
		<td class="twikiHelp">Attachments will not be shown in topic view page.</td>
	</tr>
</table>
</div>
<div class="twikiNotes twikiGrayText">
%TMPL:P{"notes"}%
%TMPL:P{"extranotes"}%</div></div>
%TMPL:P{"topicaction"}%
</form>
%BR%

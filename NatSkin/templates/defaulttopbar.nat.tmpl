<!-- template: defaulttopbar.nat.tmpl -->
%TMPL:DEF{"defaulttopbar"}% <tr>
      <td class="natTopBar natTopLeft %IFSKINSTATE{glue="off" action="oops" then="natTopRight"}%" valign="top">
	<div class="natTopBarSizer">
	  <div class="natTopLeftContents">
	    <div class="natWebTitle">
	      <a href="%WIKILOGOURL%">%WIKITOOLNAME%</a><span class="natWebLocator">%TMPL:P{"locator"}%</span>
	    </div>
	    <div class="natWebSlogan">%SITEMAPUSETO%</div>
	  </div>
	</div>
      </td>
      <td class="natTopBar natTopRight" valign="top" style="%IFSKINSTATE{glue="off" action="oops" then="display:none"}%">
	<div class="natTopBarSizer">
	  <div class="natTopRightContents">
%IFSKINSTATETHEN{searchbox="top"}% 
	    <div class="natSearchBox natSearchBoxTop">
%$nopTMPL:P{"searchbox"}%
	    </div>
%FISKINSTATE%
	    <div class="natTopicActions">
%TMPL:P{"topicactions"}% 
	    </div>
	  </div>
	</div>
      </td>
    </tr>
%IFSKINSTATETHEN{buttons="on"}%
    <tr>
      <td class="natWebButtons" colspan="2" align="%IFSKINSTATE{sidebar="left" then="right" else="left"}%">
	<div class="natWebButtonsContents"> %$nopWEBCOMPONENT{"WebButtons"}% </div>
      </td>
    </tr>
%FISKINSTATE%
%TMPL:END%
%TMPL:DEF{"topbar"}%%TMPL:P{"defaulttopbar"}%%TMPL:END%
%TMPL:DEF{"locator"}%<span class="natSep">&middot;</span>[[WebHome][%WEB%]]<span class="natSep">&middot;</span>[[%TOPIC%]]%TMPL:END%

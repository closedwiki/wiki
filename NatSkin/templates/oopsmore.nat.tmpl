%TMPL:INCLUDE{"oops"}%
<!-- template: oopsmore.nat.tmpl -->
%TMPL:DEF{"title"}%%TOPIC% (%MAKETEXT{"more"}%)%TMPL:END%
%TMPL:DEF{"heading"}%%MAKETEXT{"More Actions on Topic [_1]" args="<nop>%WEB%.%TOPIC%"}%%TMPL:END%
%TMPL:DEF{"headingstyle"}%natNoteHeading%TMPL:END%
%TMPL:DEF{"message"}% <table border="0" cellpadding="5">
<tr><td colspan="2">
---++ %MAKETEXT{"Backlinks"}%</td></tr>
<form name="main" action="%SCRIPTURLPATH{"search"}%/%WEB%/SearchResult">
<tr>
  <td>
    <input type="hidden" name="scope" value="text">
    <input type="hidden" name="regex" value="on">
    <input type="hidden" name="search" value="%TOPIC%[^A-Za-z]">
    <ul style="margin:0px"><li>%MAKETEXT{"Find topics that link to [_1] ..." args="[[%WEB%.%TOPIC%]]"}%</li></ul>
  </td>
  <td>
    <input type="submit" class="natAltButton" style="width:100%" value='%MAKETEXT{"Find"}%'>
  </td>
</tr>
<tr>
  <td>
    <ul style="margin:0px"><li>%MAKETEXT{"Search in all public webs"}%</li></ul>
  </td>
  <td>
    <input type="checkbox" name="web">
  </td>
</tr>     
</form>
<tr>
<td colspan="2">
---++ %MAKETEXT{"Topic preferences"}%</td></tr>
<form name="main" action="%SCRIPTURLPATH{"manage"}%/%WEB%/%TOPIC%" method="post">
  <input type="hidden" name="action" value="editSettings" />
<tr>
  <td>
    <ul style="margin:0px"><li>%MAKETEXT{"Edit preference settings for [_1]" args="[[%WEB%.%TOPIC%]]"}%</li></ul>
  </td>
  <td><input type="submit" class="natAltButton" style="width:100%" value='%MAKETEXT{"Edit"}%'>
</tr>
</form>
<tr style='%IF{"context i18n_enabled" then="" else="display:none"}%'>
<td colspan="2">
---++ %MAKETEXT{"Change language"}%
</td></tr>
<tr style='%IF{"context i18n_enabled" then="" else="display:none"}%'>
  <td style="padding-left:20px" valign="top">
    <form name="%INCLUDINGWEB%%INCLUDINGTOPIC%ChangeLanguage" action="%SCRIPTURLPATH{"oops"}%/%BASEWEB%/%BASETOPIC%" method="get">
    <select name="language">
    %LANGUAGES{format="<option $marker value=\"$langtag\">$langname</option>" selection="%LANGUAGE%" separator=" "}%
    </select>
    <input type="hidden" name="template" value="oopslanguagechanged" />
  </td>
  <td valign="top">
    <input class="natOkButton" style="width:100%" type="submit" value="%MAKETEXT{"OK"}%" />
    </form><p />
    <form name="%INCLUDINGWEB%%INCLUDINGTOPIC%ChangeLanguage" action="%SCRIPTURLPATH{"oops"}%/%BASEWEB%/%BASETOPIC%" method="get">
      <input type="hidden" name="template" value="oopslanguagechanged" />
      <input type="hidden" name="language" value="default" />
      <input class="natAltButton" style="width:100%" type="submit" value="%MAKETEXT{"Reset"}%" />
    </form>
  </td>
</tr>
<tr style="%CALC{"$IF($EXISTS(%TWIKIWEB%/NatCachePlugin),,display:none)"}%;">
<td colspan="2">
---++ %MAKETEXT{"Topic Caching"}%</td>
</tr>
<tr style="%CALC{"$IF($EXISTS(%TWIKIWEB%/NatCachePlugin),,display:none)"}%;">
  <td>
    <ul style="margin:0px;"><li>%MAKETEXT{"Get a fresh page of the topic [_1]" args="[[%WEB%.%TOPIC%]]"}%&nbsp;</li></ul>
  </td>
  <td>
    <form name="main" action="%SCRIPTURLPATH{"view"}%/%WEB%/%TOPIC%" method="post">
    <input type="hidden" name="refresh" value="on" />
    <input type="submit" class="natAltButton" style="width:100%" value='%MAKETEXT{"Refresh"}%' />
    </form>
  </td>
</tr>
<tr><td>&nbsp;</td>
<td>
    <input type="button" class="natCancelButton" style="width:100%" value='%MAKETEXT{"Cancel"}%' onclick="self.location.href = '%SCRIPTURLPATH{"view"}%/%WEB%/%TOPIC%';">
</td>
</tr>
</table>
%TMPL:END%

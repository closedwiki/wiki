%TMPL:INCLUDE{"twiki"}%

%TMPL:INCLUDE{"search"}%

%TMPL:DEF{"repeatedsearchblock"}%
  <div class="simpleBlueSearchResultsHeader">
    <h2>Results from %WEB% web</h2>
  </div>
  %REPEAT%
    <div id="simpleBlueSearchResults">
      <div id="simpleBlueTopRow">
          <a href="%SCRIPTURLPATH%/view%SCRIPTSUFFIX%/%WEB%/%TOPICNAME%"><b>%TOPICNAME%</b></a>
          <span class="twikiAlert">%LOCKED%</span>
      </div>
      <div id="simpleBlueGrayText">
        %TEXTHEAD%<br>
      </div>
        Last version %REVISION% edited on %TIME% by %AUTHOR%.
    </div>
  %REPEAT%
%TMPL:END%

%TMPL:DEF{"searchbody"}%
  %SPLIT%
    %TMPL:P{"repeatedsearchblock"}%
  %SPLIT%
  <b>Number of topics: %NTOPICS%</b>
%TMPL:END%

%TMPL:DEF{"simpleBlueContentPane"}%
  <div class="twikiBookViewList">
    %SPLIT%
      <div class="twikiSearchString">
        Searched: <b><nop>%SEARCHSTRING%</b>
      </div>
      %TMPL:P{"searchbody"}%
    %SPLIT%
  </div>
%TMPL:END%

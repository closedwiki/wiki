BEGIN { 
if ($ENV{GATEWAY_INTERFACE} !~ /^CGI-Perl/) {
  unshift @INC, '.'; require 'setlib.cfg'; 
}
}

if ($ENV{GATEWAY_INTERFACE} !~ /^CGI-Perl/) {
  use CGI::Carp qw(fatalsToBrowser);
  use CGI;
  use TWiki;
}

use strict;
use TWiki::Plugins::VotePlugin::Core;

###############################################################################
sub writeDebug {
  #&TWiki::Func::writeDebug("vote - " . $_[0]);
}

###############################################################################
sub main {
  my $query = new CGI;
  my $thePathInfo = $query->path_info(); 
  my $theRemoteUser = $query->remote_user();
  my $theTopic = $query->param('topic');
  my $theUrl = $query->url;

  # initialize twiki engine
  my ($topic, $web)  = &TWiki::initialize($thePathInfo, $theRemoteUser, $theTopic, $theUrl, $query);

  my $wikiUserName = &TWiki::Func::getWikiUserName();

  # check access permission
  my $viewAccessOK = &TWiki::Func::checkAccessPermission('view', $wikiUserName, '', $topic, $web);
  if(!$viewAccessOK) {
    my $url = &TWiki::Func::getOopsUrl($web, $topic, 'oopsaccessview');
    &TWiki::Func::redirectCgiQuery($query, $url);
    return;
  }

  # get all uri parameters
  my %formData;
  foreach my $paramName ($query->param()) {
    $formData{$paramName} = $query->param($paramName);
    &writeDebug("key=$paramName, value=$formData{$paramName}");
  }

  # call the voter
  &TWiki::Plugins::VotePlugin::Core::vote($web, $topic,\%formData);

  # view again
  &TWiki::Func::redirectCgiQuery($query, &TWiki::Func::getViewUrl($web, $topic));
}

&main();
